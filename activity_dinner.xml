<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002B4E"
    tools:context=".DinnerActivity">

    <Button
        android:id="@+id/dinnerBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dinnerTxt"
        android:layout_width="282dp"
        android:layout_height="277dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="208dp"
        android:background="#FFFFFF"
        android:text="Dinner Menu"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daySelectSpinner"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/daySelectSpinner"
        android:layout_width="303dp"
        android:layout_height="48dp"
        android:layout_marginTop="94dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dinnerBackBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>